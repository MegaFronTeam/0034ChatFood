mixin contactItem(data)
	+b.contactItem(style=`--bgColor:${data.bgc};`)
		+e.img-wrap
			+img(`img/svg/contact-${data.img}.svg`)
		if data.descr
			+e.descr!= data.descr
		if data.link
			+e.link(href="#")!= data.link
		if data.time
			+e.schedule!= data.time
		if data.btn
			+e.btn.btn.btn-outline-secondary(href="#")!= data.btn

mixin navBlock()
	+b.nav-block
		+e.content.sticky-js 
			block

mixin wikiItem(data)
	+b.wikiItem(href="#")
		+e.img-wrap(style=`--bgColor: ${data.bgc}`)
			.img-wrap-center
				+img(`img/wikiItem-${data.img}.jpg`, 'bg')
		+e.content
			+e.head
				+e.step!= data.step
				if data.sub
					+e.subtitle!= data.sub
				if data.badge
					.badge.bg-success!= data.badge
			+e.title!= data.title
			if data.text
				p!= data.text




