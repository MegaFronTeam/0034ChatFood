							td 
								+img('img/svg/corret.svg')
							td 
								+img('img/svg/corret.svg')
						tr
							td Премиум поддержка
							td 
								+img('img/svg/bad.svg')
							td 
								+img('img/svg/bad.svg')
							td 
								+img('img/svg/bad.svg')
							td 
								+img('img/svg/corret.svg')
					tfoot
						tr
							td(colspan="4")
