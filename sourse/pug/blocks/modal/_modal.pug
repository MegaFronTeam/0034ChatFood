
mixin modal() 
	//  start modals
	//- a(href="modal-call").link-modal-js modal-call 
	div(id="modal-call"  style="display: none" )
		+b.modal-win
			+form-wrap
				.text-center
					+e.title.form-data.h3.ttu Обратный звонок
					p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут

				+input("Ваше Имя")(required)  
				+e.BUTTON.btn.btn(type="submit")
				+policy()
	// #modal-call

	div(id="modal-stories"  style="display: none" )
		+b.modal-stories(style='--storiesBg: linear-gradient(0deg, rgba(245, 176, 77, 0.12), rgba(245, 176, 77, 0.12))')
			+e.status-line
			+e.icon-wrap: +img('img/stories-icon-1.png')
			.h5.data-title Дарим 1000 ₽ в&nbsp;качестве бонуса за регистрацию
			p.after-headline Просто создайте аккаунт и получите 1000 ₽ на баланс личного кабинета
			+e.btn.btn.btn-warning(href='#') Зарегистрироваться
	// #modal-stories
	
	div(id="modal-tariffs"  style="display: none" )
		+b.modal-win
			+b.tariffs.collapse-js
				table
					thead
						tr
							th
								h3 Сравнение тарифов
							mixin item(t, p, d, i)
								th
									+b.tariffs-item
										+e.title
											if i
												+img('img/fire.png')
											!= t
										+e.price!= p
										if d
											+e.price-day!= d
										p За одного чат-бота
										+e.btn.btn.btn-success(href="#") Выбрать

							+item(`Бесплатный`, `0 ₽`)
							+item(`Старт`, `19 200 ₽`, `89 ₽ в день`)
							+item(`Стандарт`, `28 800 ₽`, `119 ₽ в день`, `i`)
							+item(`Профи`, `57 600 ₽`, `149 ₽ в день`)
					tbody
						mixin tr(tr1, tr2, tr3, tr4, tr5)
							tr
								td!= tr1 
								td!= tr2
								td!= tr3
								td!= tr4
								td!= tr5
						+tr('Количество товаров', 'до 15', 'до 30', 'до 80', 'infinity')
						+tr('Количество рассылок в месяц', '1', 'до 5', 'до 10', 'infinity')
						+tr('Управляющие пользователи', '1', 'до 3', 'до 7', 'до 10')
						+tr('Опции товаров', 'cross', 'check', 'check', 'check')
						+tr('Расчет стоимости доставки', 'cross', 'check', 'check', 'check')
						+tr('Скрытие логотипа ChatFood', 'cross', 'check', 'check', 'check')
						+tr('Вариативные товары', 'cross', 'cross', 'check', 'check')
						+tr('Онлайн-оплата', 'cross', 'cross', 'check', 'check')
						+tr('API', 'cross', 'cross', 'check', 'check')
						+tr('Премиум поддержка', 'cross', 'cross', 'cross', 'check')
					tfoot
						tr
							td.active(colspan="4")
								span.hide Свернуть
								span.show Развернуть
								+icon('chevron-up')

							
	// #modal-tariffs
	
	// end modals