mixin top-nav(auth, empty) 
	// start top-nav
	+b.top-nav.block-with-lazy
		+b.black-line
			.container
				+e.text Черная пятница в&nbsp;ChatFood.ru. При пополнении баланса от&nbsp;10&nbsp;000&nbsp;₽&nbsp;&mdash; удвоим ваш платеж!
				+e.date с 23 по 30 ноября 2023 года
				+e.close( )
					<svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 1.2L10.8 0L6 4.8L1.2 0L0 1.2L4.8 6L0 10.8L1.2 12L6 7.2L10.8 12L12 10.8L7.2 6L12 1.2Z" fill="#8C8D8F"/>
						</svg>
		
		.container
			+e.row.row
				.col.col-lg-auto
					+e.logo(href='/'): +img('img/svg/logo.svg')
				.col-0.col-lg.order-lg-0.order-last
					.menu-mobile.menu-mobile--js
						.container.p-lg-0
							.menu-mobile__inner
								+e.login(href="#")
									+icon('logIn')
									| Войти в кабинет
								+mnu()
								+e.mob-content
									+e.tel(href='tel:+79954871611') +7 (995) 487-16-11
									+e.text г. Самара, ул. Партизанская 86, оф. 341
									+e.mail(href='mailto:info@chatfood.ru') info@chatfood.ru
									+e.tech-help(href='#' target="_blank")
										+e.icon-wrap: +icon('telegram')
										| Техподдержка в Telegram
									+soc
									+e.lang(href='#')
										| En
										+img('img/svg/english.svg')
				.col-auto.ms-auto
					if auth
						+e.authorized.menu-dropdown--js
							+e.authorized-wrap.dropdownBtn--js
								+e.img-wrap
									span М
									if !empty 
										+img('img/avatar.jpg')
							.dropdown-container
								a(href="#") Личный кабинет
								a(href="#") Мои чат-боты
								a(href="#") Заказы
								a(href="#") Бронирование столов
								a(href="#") Выйти
					else
						+e.btn-reg.btn.btn-outline-primary(href='#') Начать бесплатно
						+e.btn.d-none.d-lg-inline(href='#') Войти
				.col-auto.d-lg-none
					+menu-toggle()
	// end top-nav