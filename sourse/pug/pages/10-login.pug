include ../blocks/sTryIt/_sTryIt.pug

block variables
	- let  mainPage= 'login-page' 
	- let  bg= '10-login.jpg'

block title
	- let  title= 'Login page'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	//- +parts('header')
	main
		+authorization({
			json: 'hero_Right.json',
			title: 'Добро пожаловать',
			text: 'Войдите в аккаунт, чтобы продолжить работу',
		})
			+e.content
				h4 Вход
				p Впервые в ChatFood? 
					a(href="#") Регистрация
				+form-wrap
					+input('Email', 'email')
					+e.input-wrap--pass.form-group
						+e.INPUT.input.form-control(name='password' type='password' placeholder='Пароль')
						+e.pass-btn: +icon('eye')
					+e.btn.btn.btn-primary(type='submit') Войти
				+e.forgot(href='#') Забыли пароль?
	//- +parts('footer')


