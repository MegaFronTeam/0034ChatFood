block variables
	- let  mainPage= 'login-page' 
	- let  bg= '10-login.jpg'

block title
	- let  title= 'Login page'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	//- +parts('header')
	main
		+authorization({
			json: 'hero_right.json',
			title: 'Начните бесплатно',
			text: 'Зарегистрируйтесь и создайте чат-бота за 5 минут',
		})
			+e.content
				h4 Регистрация 
				p Уже есть аккаунт? 
					a(href="#") Войти
				+form-wrap
					+input('Email', 'email')
					+input('', 'tel').tel-js
					+e.input-wrap--pass.form-group
						+e.INPUT.input.form-control(name='password' type='password' placeholder='Пароль')
						+e.pass-btn: +icon('eye')
					+e.input-wrap--pass.form-group
						+e.INPUT.input.form-control(name='password' type='password' placeholder='Повторите пароль')
						+e.pass-btn: +icon('eye')
					+e.btn.btn.btn-primary(type='submit') Продолжить
					+policy()
